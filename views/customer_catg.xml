<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="customer_category_view_form" model="ir.ui.view">
        <field name="name">customer_category.view.form</field>
        <field name="model">customer.category</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="customer_category_view_tree" model="ir.ui.view">
        <field name="name">customer_category.view.tree</field>
        <field name="model">customer.category</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="customer_category_action" model="ir.actions.act_window">
        <field name="name">Customer Category</field>
        <field name="res_model">customer.category</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <h2>
                Create a new Customer Category
            </h2>
        </field>
    </record>
    <menuitem
        id="customer_category_menu_do_stuff"
        name="Customer Category"
        action="customer_category_action"
        parent="contacts.res_partner_menu_config"
        sequence="7" />


